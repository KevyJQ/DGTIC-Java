DROP TABLE IF EXISTS Employee_VACATION;
DROP TABLE IF EXISTS Employee_NICKNAMES;
DROP TABLE IF EXISTS EMPLOYEE;
CREATE TABLE EMPLOYEE (ID INTEGER NOT NULL auto_increment, NAME VARCHAR(255), SALARY BIGINT, PRIMARY KEY (ID));
CREATE TABLE Employee_VACATION (Employee_ID INTEGER NOT NULL, STARTDATE VARCHAR(255), DAYS_ABS INTEGER);
CREATE TABLE Employee_NICKNAMES (Employee_ID INTEGER NOT NULL, NICKNAMES VARCHAR(255));


INSERT INTO EMPLOYEE VALUES ('100', 'OSCAR', '1000'),('200', 'PAULA', '2000'),('300', 'NADIA', '3000'), ('400', 'MARCO', '4000');
