<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="mx.unam.tic.diplomado.agenda.modelo.entidades">

    <class name="ContactoMedio" table="t_contactos_medios">
        <id name="id" column="id_contactos_medios">
            <generator class="identity"/>
        </id>
        
        <property name="valor" column="vc_valor" type="string" length="300"/>
        
        <many-to-one name="contacto" column="id_contacto" lazy="false"
        	class="Contacto"/>
        	
        <many-to-one name="medioContacto" column="id_medio_contacto" lazy="false"
        	class="MedioContacto"/>
    </class>

</hibernate-mapping>